<% if @article.errors.any? %>
<div class="container">
  <div class="alert alert-danger col-sm-9 col-sm-offset-1">
    <h5>The following errors occurred:</h5>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
    
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-xs-12">
      <%= form_for(@article, :html=>{class:"form-horizontal", role: "form" } ) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title,  class:"form-control", placeholder:"Enter the title of the article", autofocus:true  %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10,  class:"form-control", placeholder:"Enter the body of the article"  %>
        </div>
      </div>  
      
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit class: 'btn btn-primary btn-lg' %> or <%= link_to "cancel", articles_path %>
        </div>
      </div>
      <% end %>
  </div>
</div>