<h1>Listing all Articles. </h1>

<p><%= link_to "Create new article", new_article_path,  class: "btn btn-primary" %></p>
<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Desc</th>
    <th colspan=3> Action</th>
      
  </tr>
  <% @articles.each do |a| %>
    <tr>
      <td>
        <%= a.title %>
      </td>
      <td>
        <%= a.description %>
      </td>
      <td>
        <%= link_to "edit", edit_article_path(a), class: "btn btn-primary" %>
      </td>
      <td>
         <%= link_to "show", article_path(a),  class: "btn btn-primary" %>
      </td>
      <td>
        <%= link_to "delete", article_path(a), method: :delete, data: {confirm: "Are you sure?"} ,  class: "btn btn-danger"%>
      </td>
    </tr>
  <% end %>
</table>