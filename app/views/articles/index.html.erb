<h1 align="center">Listing all Articles. </h1>

<p><%= link_to "Create new article", new_article_path,  class: "btn btn-primary" %></p>

<% @articles.each do |a| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
           <%= link_to a.title, article_path(a) %>
        </div>
        <div class="article-snippet">
          <%= truncate(a.description, length:100) %>
        </div>
        <div class="article-actions">
          <%= link_to "Edit", edit_article_path(a), class: 'btn btn-xs btn-primary' %>
          <%= link_to "Delete", articles_path(a), mmethod: :delete, data: {confirm: "Are you sure?"}, class:'btn btn-xs btn-danger' %>
        </div>
      </div>
    </div>
  </div>
<% end %>